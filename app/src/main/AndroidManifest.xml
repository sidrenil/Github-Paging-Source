<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.githubpagingsource">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubPagingSource">
        <activity android:name="com.example.githubpagingsource.ui.SearchRepositoriesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.githubpagingsource.model.RepoSearchResult"
            tools:ignore="Instantiatable">
        </activity>

        <activity android:name="com.example.githubpagingsource.api.RepoSearchResponse"
            tools:ignore="Instantiatable">
         </activity>
        <activity android:name="com.example.githubpagingsource.model.Repo"
            tools:ignore="Instantiatable">
        </activity>

        <activity android:name="com.example.githubpagingsource.ui.ReposAdapter"
            tools:ignore="Instantiatable">
        </activity>
        <activity android:name="com.example.githubpagingsource.ui.RepoViewHolder"
            tools:ignore="Instantiatable">
        </activity>
            <activity android:name="com.example.githubpagingsource.ui.SearchRepositoriesViewModel"
                tools:ignore="Instantiatable">
            </activity>
            <activity android:name="com.example.githubpagingsource.ui.ViewModelFactory"
                tools:ignore="Instantiatable">
            </activity>


    </application>

</manifest>